@startuml
!define RECTANGLE class

package "Global Entry Point" {
    [Cloudflare Global Edge] as Edge
}

package "Core Application (Microservices)" {
    [Artist Dashboard] as Dash
    [AI Workflow Engine] as Workflow
    [Dynamic Portfolio Renderer] as Portfolio
}

package "AI Intelligence Layer" {
    [LLM for Brief Analysis] as BriefAI
    [Vision AI for Tagging] as VisionAI
    [Pricing Predictor] as PriceAI
}

database "Global Data Mesh" {
    [PostgreSQL (User Data)] as DB
    [Vector DB (Asset Embeddings)] as Vector
    [S3 (Global Asset Storage)] as Storage
}

Edge --> Dash
Dash --> Workflow
Workflow --> VisionAI
Workflow --> Vector
Portfolio --> BriefAI
BriefAI --> Vector
Portfolio --> Storage

@enduml